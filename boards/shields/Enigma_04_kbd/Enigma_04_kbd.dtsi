#include <dt-bindings/zmk/matrix_transform.h>
#include "Enigma_04_kbd_layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &layout_kbd0;
    };
};

/ {
    transform_kbd0: transform_kbd0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <3>;               
        map = <
                    RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,9) RC(0,8) RC(0,7) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,9) RC(1,8) RC(1,7) RC(1,6) RC(1,5)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,5)
        >;
    };

    transform_kbd1: transform_kbd1 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;               
        map = <
                    RC(0,1) RC(0,2) RC(0,3) RC(0,4)       RC(0,9) RC(0,8) RC(0,7) RC(0,6)
            RC(3,0) RC(1,0) RC(1,2) RC(1,3) RC(1,4)       RC(1,9) RC(1,8) RC(1,7) RC(1,5) RC(3,5)
            RC(3,1) RC(2,0) RC(2,1) RC(2,3) RC(2,4)       RC(2,9) RC(2,8) RC(2,6) RC(2,5) RC(3,6)
        >;
    };

    kscan_kbd0: kscan_kbd0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
            row-gpios
                = <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                  <&gpio1 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                  <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    kscan_kbd1: kscan_kbd1 {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;
        interrupt-gpios = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    encoder_0: encoder_0 {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <12>;
        status = "disabled";
    };

    sensors_0: sensors_0 {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder_0>;
        triggers-per-rotation = <12>;
    };
};